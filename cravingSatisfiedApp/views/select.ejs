<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="/css/bootstrap.min.css" rel="stylesheet" />
  <script src="/js/bootstrap.bundle.min.js"></script>

  <!-- Include jQuery -->
  <script src="/jquery/dist/jquery.min.js"></script>

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Potta+One&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="stylesheets/style.css" />
</head>

<body>
  <!--NAVBAR-->
  <%- include('partials/navbar.ejs') %>

  <!--BREADCRUMB-->
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb d-flex justify-content-start">
      <li class="breadcrumb-item align-first"><a href="main.html">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">Select</li>
    </ol>
  </nav>

  <section id="selection">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="form-group user-select-none">
            <label for="budget"><span style="color: #f1e423">SET</span> your budget</label>
            <div class="input-group">
              <span class="input-group-text" id="basic-addon1">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cash" viewBox="0 0 16 16">
                  <path d="M8 10a2 2 0 1 0 0-4 2 2 0 0 0 0 4"></path>
                  <path d="M0 4a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1zm3 0a2 2 0 0 1-2 2v4a2 2 0 0 1 2 2h10a2 2 0 0 1 2-2V6a2 2 0 0 1-2-2z"></path>
                </svg>
              </span>
              <input type="number" id="budget" class="form-control" placeholder="Input Your Budget" min="30" max="200">
            </div>
          </div>
          <div class="form-group">
            <label><span style="color: #D23140">SELECT 2</span> <span> categories </span> </label>
            <div class="buttonselect">
              <button id="snacks" class="btn btn-brand btn-select ms-2">Snacks</button>
              <button id="beverages" class="btn btn-brand btn-select ms-2">Beverages</button>
              <button id="ricemeals" class="btn btn-brand btn-select ms-2">Rice Meals</button>
            </div>
          </div>
        </div>
        <div class="col-md-12" id="selected-section">
          <div class="category-section">
            <div id="category-area"></div>
            <div id="category-sub-area" class="subcategory-section"></div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="button-container1">
            <button class="submit-btn">Submit</button>
          </div>
        </div>
      </div>
    </div>

  </section>

  <!--FOOTER-->
  <%- include('partials/footer.ejs') %>

  <script src="javascripts/main.js"></script>
</body>

</html>